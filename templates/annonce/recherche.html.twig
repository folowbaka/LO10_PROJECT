{% extends 'base.html.twig' %}

{% block title %}Rechercher Table{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/recherche.css') }}">
{% endblock %}
{% block body %}
    <div class="container">
        <form>
            <div class="form-row form-group">
                <div class="col-6">
                    <input type="text" class="form-control" placeholder="Quelle table recherchez-vous?">
                </div>
                <div class="col-3">
                    <select class="form-control">
                        <option value="all">Tous types de jeu</option>
                        <option value="jdr">Jeu de rôle</option>
                        <option value="jds">Jeu de société</option>
                    </select>
                </div>
                <div class="col-3">
                    <button  id="btnRechercher" type="submit" class="btn btn-primary">Rechercher</button>
                </div>
            </div>
            <div class="form-row form-group">
                <div class="offset-3 col-3">
                    <select class="form-control">
                        {{ selectZoneHtml|raw }}
                    </select>
                </div>
                <div class="col-3">
                    <input type="text" class="form-control" placeholder="Ville ou code Postal">
                </div>
            </div>
        </form>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}