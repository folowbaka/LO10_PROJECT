{% extends 'base.html.twig' %}

{% block title %}Organiser Table{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="row">
        <div class="col-lg-12">
            {{ form_start(form) }}
            <div class="card">
                <h3 class="card-header cardFormHeader">Votre Table</h3>
                <div class="card-body">
                    {{ form_row(form.titre) }}
                    {{ form_row(form.type) }}
                    {{ form_row(form.description) }}
                </div>
            </div>
            <div class="card">
                <h3 class="card-header cardFormHeader">Localisation de votre Table</h3>
                <div class="card-body">
                    {{ form_row(form.ville) }}
                    {{ form_row(form.adresse) }}
                </div>
            </div>
            <div class="card">
                <h3 class="card-header cardFormHeader">Vos informations de contact</h3>
                <div class="card-body">
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
